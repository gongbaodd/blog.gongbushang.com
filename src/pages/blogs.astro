---
import BaseHead from "@/packages/components/BaseHead.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/packages/consts";
import { getCollection } from "astro:content";
import BlogList from "../components/BlogList";
import "@mantine/core/styles.css";
import BlogMasonry from "../components/Masonry";

const posts = await getCollection("blog");
---
 <style is:global>

/* Card height variants for different layouts */
.masonry-item-vertical {
  height: 420px;
}

.masonry-item-horizontal {
  height: 280px;
}

.masonry-item-square {
  height: 340px;
}

/* Text clamping utilities */
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Smooth scrolling */
html {
  scroll-behavior: smooth;
}

/* Card hover effects */
.group:hover img {
  filter: brightness(0.9);
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
}

::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #a1a1a1;
}
    </style>
<!doctype html>
<html lang="en" class="h-full relative">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
   
  </head>
  <body>
    <BlogMasonry client:load/>
  </body>
</html>
